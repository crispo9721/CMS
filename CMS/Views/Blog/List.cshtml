@model IEnumerable<ArticleModel>

@{
    ViewData["Title"] = "aktualności";
    Layout = "~/Views/Shared/User/_Layout.cshtml";
    var homeData = ViewData["HomeData"] as HomeView;
}

<section class="page_header pb-0 w-100">
    <div class="container">
        <div class="row">
            <div class="col-md-12 page-content position-relative">
                <h2 class="text-white mt-5 mb-2">Najnowsze wpisy</h2>
                <p class="text-white">
                    Programowanie i tworzenie stron to moja pasja. Z chęcią dziele się swoją wiedza jak i doświadczeniem.
                </p>
                <div class="page_nav bg-white d-inline-block">
                    <span>Jesteś tutaj:</span> <a href="@Url.Action("Index","Home")" class="d-inline-block color-black">Strona główna</a> <span class="color-yellow"><i class="ti ti-angle-double-right"></i>Blog</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Blog starts -->
<section class="bg-light text-left">
    <div class="container">
        <div class="row">
            <!-- Blog Left Listing -->
            <div class="col-lg-8 col-md-7">
                @foreach (var article in Model)
                {
                    <div class="blog-box heading-space">
                        <!-- Blog List Inner -->
                        <div class="blog-listing-inner news_item">
                            <div class="image hover-effect">
                                <img src="@article.Image.Url" alt="blog-img">
                            </div>
                            <div class="news_desc">
                                <h3 class="text-capitalize font-weight-500"><a href="@($"blog/{article.Slug}")" class="color-black">@article.Title</a></h3>
                                <ul class="meta-tags mt-20px mb-20px">
                                    <li><a href="javascript:void(0)"><i class="ti ti-calendar"></i>@article.AddDate.ToString("dd-MM-yyyy")</a></li>
                                    <li><a href="javascript:void(0)"> <i class="ti ti-user"></i> @article.User.Name </a></li>
                                    <li><a href="javascript:void(0)"><i class="ti ti-comments-smiley"></i>5</a></li>
                                </ul>
                                <p class="mb-35px color-grey line-height-25px">@article.Excerpt</p>
                                <a href="@($"blog/{article.Slug}")" class="btn-setting btn-hvr-setting-main btn-pink">
                                    Czytaj więcej
                                    <span class="btn-hvr-setting">
                                        <span class="btn-hvr-setting-inner">
                                            <span class="btn-hvr-effect"></span>
                                            <span class="btn-hvr-effect"></span>
                                            <span class="btn-hvr-effect"></span>
                                            <span class="btn-hvr-effect"></span>
                                        </span>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-sm-12">
                        <!--Pagination-->
                        <ul class="pagination justify-content-center mb-xs-5">
                            <li class="page-item"><a class="page-link" href="#"><i class="ti ti-angle-left"></i></a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="ti ti-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Blog Widgets -->
            <div class="col-lg-4 col-md-5">
                @await Html.PartialAsync("User/_SideBar")
            </div>
        </div>
    </div>
</section>
<!-- Blog ends -->