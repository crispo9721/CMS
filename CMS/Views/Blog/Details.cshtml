@model ArticleModel

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/User/_Layout.cshtml";
}

<!-- Page Header -->
<section class="page_header pb-0 w-100">
    <div class="container">
        <div class="row">
            <div class="col-md-12 page-content position-relative">
                <h2 class="text-white mt-5 mb-2">@Model.Title</h2>
                <p class="text-white">@Model.Excerpt</p>
                <div class="page_nav bg-white d-inline-block">
                    <span>Jesteś tutaj:</span> <a href="@Url.Action("Index","Home")" class="d-inline-block color-black">Strona główna</a> <i class="ti ti-angle-double-right"></i> <a href="@Url.Action("List","Blog")" class="d-inline-block color-black">Blog</a> <span class="color-yellow"><i class="ti ti-angle-double-right"></i>@Model.Title</span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Page Header -->
<!-- Blog starts -->
<section class="bg-light text-left">

    <div class="container">
        <div class="row">
            <!-- Blog Left Listing -->
            <div class="col-lg-8 col-md-7">
                <div class="blog-box heading-space">
                    <!-- Blog List Inner -->
                    <div class="blog-listing-inner news_item">
                        @if (Model.Image != null)
                        {
                            <div class="image hover-effect">
                                <img src="@Model.Image.Url" alt="@Model.Image.Description">
                            </div>
                        }
                        <div class="news_desc">
                            <h3 class="font-weight-500">@Model.Title</h3>
                            <ul class="meta-tags mt-20px mb-20px">
                                <li><i class="ti ti-calendar"></i> @Model.AddDate.ToString("dd-MM-yyyy")</li>
                                <li><i class="ti ti-user"></i> @Model.User.Name</li>
                                <li><i class="ti ti-comments"></i> 5</li>

                                <li>
                                    <i class="ti ti-tag"></i>
                                    @foreach (var taxonomy in Model.Taxonomies)
                                    {
                                        if (taxonomy.Tag != null)
                                        {
                                            <span> @taxonomy.Tag.Name</span>
                                        }
                                    }
                                </li>

                                <li>
                                    <i class="ti ti-folder"></i>
                                    @foreach (var taxonomy in Model.Taxonomies)
                                    {
                                        if (taxonomy.Category != null)
                                        {
                                            <span> @taxonomy.Category.Name</span>
                                        }
                                    }
                                </li>

                            </ul>
                            @Html.Raw(Model.Content)

                        </div>
                    </div>
                </div>

                <div class="blog-box heading-space ">
                    <!-- Blog List Inner -->
                    <div class="blog-listing-inner news_item p-5 pb-0 mb-0">
                        <div class="text-left w-100">
                            <h4 class="color-black mt-2 mb-2"> Dodaj swój komenatrz</h4>
                            <p class="color-grey line-height-25px mb-2rem">
                                Nie będę publikował twojego adresu e-mail
                            </p>
                        </div>
                        <div class="company-contact-form">
                            <form class="contact-form-outer" onsubmit="return false;">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="contact-form-textfield pb-4">
                                            <input type="text" placeholder="Imię *" class="form-control" required id="name" name="name">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="contact-form-textfield pb-4">
                                            <input type="email" placeholder="Adres e-mail *" class="form-control" required id="email" name="email">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="contact-form-textfield pb-4">
                                            <textarea placeholder="Treść komenentarza *" class="form-control message" id="message" name="message"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 pt-xs-25px">
                                        <button type="submit" class="btn-setting btn-hvr-setting-main btn-yellow btn-hvr text-uppercase w-100" id="submit_btn">
                                            SKOMENTUJ
                                            <span class="btn-hvr-setting btn-hvr-pink">
                                                <span class="btn-hvr-setting-inner">
                                                    <span class="btn-hvr-effect"></span>
                                                    <span class="btn-hvr-effect"></span>
                                                    <span class="btn-hvr-effect"></span>
                                                    <span class="btn-hvr-effect"></span>
                                                </span>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Blog Widgets -->
            <div class="col-lg-4 col-md-5">
                @await Html.PartialAsync("User/_SideBar")
            </div>
        </div>
    </div>
</section>
<!-- Blog ends -->
