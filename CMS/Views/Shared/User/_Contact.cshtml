@model ContactView

<section id="form">
    <div class="row">
        <div class="col-md-12">
            <div class="main-title wow fadeIn" data-wow-delay="300ms">
                <h5> Zostaw wiadomość </h5>
                <h2> Formularz kontaktowy </h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 contact-form-center wow fadeInUp" data-wow-delay="400ms">
            <div class="company-contact-form">

                @Html.ValidationSummary(false, null, new { @class = "alert alert-warning alert-dismissible fade show with-icon" })

                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "contact-form-outer" }))
                {
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="contact-form-textfield pb-4">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Imię *" })
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="contact-form-textfield pb-4">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "E-mail *" })
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="contact-form-textfield pb-4">
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Telefon *" })
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="contact-form-textfield pb-4">
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Temat" })
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="contact-form-textfield pb-4">
                                @Html.TextAreaFor(x => x.Message, new { @class = "form-control message", @placeholder = "Treść wiadomości *" })
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="contact-form-textfield pb-4">
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBoxFor(x => x.IsAccepted, new { @class = "custom-control-input", @id = "accepted" })
                                    <label class="custom-control-label m-0" for="accepted">Akceptuję <a class="checkbox" href="@Url.Action("PrivacyPolicy","Home")">politykę prywatności</a></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 pt-xs-25px text-center">
                            <button type="submit" class="btn-setting btn-hvr-setting-main btn-yellow btn-hvr text-uppercase" id="submit_btn">
                                Wyślij wiadomość
                                <span class="btn-hvr-setting btn-hvr-pink">
                                    <span class="btn-hvr-setting-inner">
                                        <span class="btn-hvr-effect"></span>
                                        <span class="btn-hvr-effect"></span>
                                        <span class="btn-hvr-effect"></span>
                                        <span class="btn-hvr-effect"></span>
                                    </span>
                                </span>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Contact & Map ends -->
