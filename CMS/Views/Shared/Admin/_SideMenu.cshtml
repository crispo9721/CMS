<div class="sidebar-wrapper scrollbar scrollbar-inner">
    <div class="sidebar-content">
        <div class="user">
            <div class="avatar-sm float-left mr-2">
                <img src="~/admin/images/profile.jpg" alt="..." class="avatar-img rounded-circle">
            </div>
            <div class="info">
                <a data-toggle="collapse" href="#collapseExample" aria-expanded="true">
                    <span>
                        @User.Identity.Name
                        <span class="user-level">Administrator</span>
                        <span class="caret"></span>
                    </span>
                </a>
                <div class="clearfix"></div>

                <div class="collapse in" id="collapseExample">
                    <ul class="nav">
                        <li>
                            <a href="@Url.Action("Edit","Account")">
                                <span class="link-collapse">Edytuj profil</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ChangePassword","Account")">
                                <span class="link-collapse">Zmiana hasła</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <ul class="nav nav-primary">
            <li class="nav-section">
                <span class="sidebar-mini-icon">
                    <i class="fa fa-ellipsis-h"></i>
                </span>
                <h4 class="text-section">MENU</h4>
            </li>

            <li class="nav-item @(ViewData["Group"] as string == "Article" ? "active" : "")">
                <a data-toggle="collapse" href="#posts">
                    <i class="fas fa-pen-nib"></i>
                    <p>Wpisy</p>
                    <span class="caret"></span>
                </a>
                <div class="collapse @(ViewData["Group"] as string == "Article" ? "show" : "")" id="posts">
                    <ul class="nav nav-collapse">
                        <li class="@(ViewData["Page"] as string == "ArticleList" ? "active" : "")">
                            <a href="@Url.Action("List","Article")">
                                <span class="sub-item">Wszystkie wpisy</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Page"] as string == "ArticleAdd" ? "active" : "")">
                            <a href="@Url.Action("Add","Article")">
                                <span class="sub-item">Dodaj nowy</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Page"] as string == "ArticleCategory" ? "active" : "")">
                            <a href="@Url.Action("List","Category")">
                                <span class="sub-item">Kategorie</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Page"] as string == "ArticleTag" ? "active" : "")">
                            <a href="@Url.Action("List","Tag")">
                                <span class="sub-item">Tagi</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>

            <li class="nav-item @(ViewData["Group"] as string == "Comment" ? "active" : "")">
                <a href="@Url.Action("List","Comment")">
                    <i class="far fa-comments"></i>
                    <p>Komentarze</p>
                    <span class="badge badge-info">-</span>
                </a>
            </li>

            <li class="nav-item @(ViewData["Group"] as string == "Media" ? "active" : "")">
                <a data-toggle="collapse" href="#media">
                    <i class="fas fa-images"></i>
                    <p>Media</p>
                    <span class="caret"></span>
                </a>
                <div class="collapse @(ViewData["Group"] as string == "Media" ? "show" : "")" id="media">
                    <ul class="nav nav-collapse">
                        <li class="@(ViewData["Page"] as string == "MediaList" ? "active" : "")">
                            <a href="@Url.Action("List","Media")">
                                <span class="sub-item">Biblioteka</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Page"] as string == "MediaAdd" ? "active" : "")">
                            <a href="@Url.Action("Add","Media")">
                                <span class="sub-item">Dodaj nowe</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>

            <li class="nav-item @(ViewData["Group"] as string == "Page" ? "active" : "")">
                <a data-toggle="collapse" href="#page">
                    <i class="fas fa-desktop"></i>
                    <p>Strony</p>
                    <span class="caret"></span>
                </a>
                <div class="collapse @(ViewData["Group"] as string == "Page" ? "show" : "")" id="page">
                    <ul class="nav nav-collapse">
                        <li class="@(ViewData["Page"] as string == "PageList" ? "active" : "")">
                            <a href="@Url.Action("List","Page")">
                                <span class="sub-item">Wszystkie strony</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Page"] as string == "PageAdd" ? "active" : "")">
                            <a href="@Url.Action("Add","Page")">
                                <span class="sub-item">Dodaj nową</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>

            <li class="nav-item @(ViewData["Group"] as string == "Account" ? "active" : "")">
                <a data-toggle="collapse" href="#user">
                    <i class="fas fa-user-cog"></i>
                    <p>Użytkownicy</p>
                    <span class="caret"></span>
                </a>
                <div class="collapse @(ViewData["Group"] as string == "Account" ? "show" : "")" id="user">
                    <ul class="nav nav-collapse">
                        <li class="@(ViewData["Page"] as string == "AccountList" ? "active" : "")">
                            <a href="@Url.Action("List","Account")">
                                <span class="sub-item">Lista użytkowników</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Page"] as string == "AccountAdd" ? "active" : "")">
                            <a href="@Url.Action("Register","Account")">
                                <span class="sub-item">Dodaj użytkownika</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>

            <li class="nav-item @(ViewData["Group"] as string == "Appearance" ? "active" : "")">
                <a data-toggle="collapse" href="#apperance">
                    <i class="fas fa-paint-brush"></i>
                    <p>Wygląd</p>
                    <span class="caret"></span>
                </a>
                <div class="collapse @(ViewData["Group"] as string == "Appearance" ? "show" : "")" id="apperance">
                    <ul class="nav nav-collapse">
                        <li class="@(ViewData["Page"] as string == "AppearanceLogo" ? "active" : "")">
                            <a href="@Url.Action("SetImages","Appearance")">
                                <span class="sub-item">Logotyp</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Page"] as string == "AppearanceColor" ? "active" : "")">
                            <a href="@Url.Action("SetColors","Appearance")">
                                <span class="sub-item">Kolorystyka</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Page"] as string == "AppearanceTypography" ? "active" : "")">
                            <a href="@Url.Action("SetTypography","Appearance")">
                                <span class="sub-item">Typografia</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>

            <li class="nav-item @(ViewData["Group"] as string == "Settings" ? "active" : "")">
                <a data-toggle="collapse" href="#pagesettings">
                    <i class="fas fa-cog"></i>
                    <p>Ustawienia</p>
                    <span class="caret"></span>
                </a>
                <div class="collapse @(ViewData["Group"] as string == "Settings" ? "show" : "")" id="pagesettings">
                    <ul class="nav nav-collapse">
                        <li class="@(ViewData["Page"] as string == "SettingsGeneral" ? "active" : "")">
                            <a href="@Url.Action("Index","Settings")">
                                <span class="sub-item">Ogólne</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Page"] as string == "SettingsEmail" ? "active" : "")">
