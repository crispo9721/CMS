            <li class="nav-item @(ViewData["Group"] as string == "Payment" ? "active" : "")">
                <a href="@Url.Action("Index","Payment")">
                    <i class="far fa-credit-card"></i>
                    <p>Płatności</p>
                    <span class="badge badge-info">30 dni</span>
                </a>
            </li>


            <li class="nav-item @(ViewData["Group"] as string == "Analytics" ? "active" : "")">
                <a href="@Url.Action("Index","Analytics")">
                    <i class="fas fa-chart-bar"></i>
                    <p>Statystyki</p>
                </a>
            </li>

        </ul>
