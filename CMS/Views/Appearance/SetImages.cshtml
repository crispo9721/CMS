@model OptionsModel

@{
    ViewData["Title"] = "ustawanie logotypu";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<div class="page-inner">

    <div class="page-header">
        <h4 class="page-title">Logotyp</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="@Url.Action("Index","Admin")">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index","Appearance")">Wygląd</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                Logotyp
            </li>
        </ul>
    </div>

    @using (Html.BeginForm("SetLogo", "Appearance", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row" }))
    {
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Dodawanie logotypu</h4>
                        <button class="btn btn-success ml-auto" type="submit">
                            <i class="fa fa-plus"></i>
                            Zapisz logotyp
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">

                        <!-- Pogląd logotypu -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex align-items-center">
                                        <h4 class="card-title">Załącz logotyp</h4>
                                        <button id="open-load-img-placeholder-logo" class="btn btn-primary ml-auto">
                                            <i class="fa fa-plus"></i>
                                            Dołącz logo
                                        </button>
                                        <button id="delete-img-placeholder-logo" class="btn btn-danger ml-3 d-none">
                                            <i class="fa fa-times"></i>
                                            Usuń zdjęcie
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body mx-auto justify-content-center align-items-center flex-column">
                                    <div class="form-group">
                                        <div class="input-file input-file-image">
                                            <img class="img-upload-preview" height="150" src="~/images/img-placeholder.png" alt="preview" id="img-placeholder-logo">
                                            <input type="file" class="form-control form-control-file" name="logo" id="input-img-placeholder-logo" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Aktualny logotyp -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-title">Aktualny logotyp</div>
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        @if (Model.Logo != null)
                                        {
                                            <img class="img-upload-preview" height="150" src="@Model.Logo.Url" alt="preview" id="img-placeholder-logo">
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm("SetFavicon", "Appearance", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row" }))
    {
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Dodawanie favicony</h4>
                        <button class="btn btn-success ml-auto" type="submit">
                            <i class="fa fa-plus"></i>
                            Zapisz favicon
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">

                        <!-- Pogląd favicony -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex align-items-center">
                                        <h4 class="card-title">Załącz favicon</h4>
                                        <button id="open-load-img-placeholder-favicon" class="btn btn-primary ml-auto">
                                            <i class="fa fa-plus"></i>
                                            Dołącz favicon
                                        </button>
                                        <button id="delete-img-placeholder-favicon" class="btn btn-danger ml-3 d-none">
                                            <i class="fa fa-times"></i>
                                            Usuń zdjęcie
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body mx-auto justify-content-center align-items-center flex-column">
                                    <div class="form-group">
                                        <div class="input-file input-file-image">
                                            <img class="img-upload-preview" height="150" src="~/images/img-placeholder.png" alt="preview" id="img-placeholder-favicon">
                                            <input type="file" class="form-control form-control-file" name="favicon" id="input-img-placeholder-favicon" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Aktualny favicon -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-title">Aktualny favicon</div>
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        @if (Model.Favicon != null)
                                        {
                                            <img class="img-upload-preview" height="150" src="@Model.Favicon.Url" alt="preview" id="img-placeholder-logo">
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // ------------------------ Logotyp ---------------------------------

        // 1. Otwieranie explorera plików
        const openLoadImgPlaceholderLogo = document.querySelector("#open-load-img-placeholder-logo");
        const inputImgPlaceholderLogo = document.querySelector("#input-img-placeholder-logo");

        openLoadImgPlaceholderLogo.addEventListener("click", function (e) {
            e.preventDefault();
            inputImgPlaceholderLogo.click();
        });

        // 2. Przekazywanie zdjęcia do placeholdera
        const imgPlaceholderLogo = document.querySelector("#img-placeholder-logo");
        const buttonPlaceholderLogo = document.querySelector("#load-placeholder-logo");
        const deleteButtonLogo = document.querySelector("#delete-img-placeholder-logo");

        function readURLLogo(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    imgPlaceholderLogo.src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);

                // pokazujemy przycisk do usuwania
                deleteButtonLogo.classList.remove("d-none");
            }
        }

        // 3. Usuwanie placeholdera
        deleteButtonLogo.addEventListener("click", function (e) {
            e.preventDefault();
            imgPlaceholderLogo.src = "/images/img-placeholder.png";
            deleteButtonLogo.classList.add("d-none");
        });

        // ------------------------ Favicon ---------------------------------

        // 1. Otwieranie explorera plików
        const openLoadImgPlaceholderFavicon = document.querySelector("#open-load-img-placeholder-favicon");
        const inputImgPlaceholderFavicon = document.querySelector("#input-img-placeholder-favicon");

        openLoadImgPlaceholderFavicon.addEventListener("click", function (e) {
            e.preventDefault();
            inputImgPlaceholderFavicon.click();
        });

        // 2. Przekazywanie zdjęcia do placeholdera
        const imgPlaceholderFavicon = document.querySelector("#img-placeholder-favicon");
        const buttonPlaceholderFavicon = document.querySelector("#load-placeholder-favicon");
        const deleteButtonFavicon = document.querySelector("#delete-img-placeholder-favicon");

        function readURLFavicon(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    imgPlaceholderFavicon.src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);

                // pokazujemy przycisk do usuwania
                deleteButtonFavicon.classList.remove("d-none");
            }
        }

        // 3. Usuwanie placeholdera
        deleteButtonFavicon.addEventListener("click", function (e) {
            e.preventDefault();
            imgPlaceholderFavicon.src = "/images/img-placeholder.png";
            deleteButtonFavicon.classList.add("d-none");
        });
    </script>
}