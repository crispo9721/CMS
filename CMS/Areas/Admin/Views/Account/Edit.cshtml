@model UserView

@{
    ViewData["Title"] = "edycja";

    ViewData["Page"] = "AccountList";
    ViewData["Group"] = "Account";

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-inner">

    <div class="page-header">
        <h4 class="page-title">Edycja użytkownika</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="@Url.Action("Index","Admin")">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("List","Account")">Lista użytkownikow</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                Edycja
            </li>
        </ul>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Edytuj użytkownika</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="login" style="background-color: white;">

                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            @using (Html.BeginForm("Edit", "Account", new { area = "admin" }, FormMethod.Post, true, new { @class = "login-form" }))
                            {
                                @Html.HiddenFor(x => x.Id)

                                <div class="form-group">
                                    <label for="username" class="placeholder"><b>Login</b></label>
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                                </div>
                                <div class="fssorm-group">
                                    <label for="username" class="placeholder"><b>E-mail</b></label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="username" class="placeholder"><b>Imię</b></label>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="username" class="placeholder"><b>Nazwisko</b></label>
                                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                                </div>
                                <div class="form-group form-action-d-flex mb-3">
                                    <button type="submit" class="btn btn-secondary col-md-5 float-left mt-3 mt-sm-0 fw-bold">Edytuj</button>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>