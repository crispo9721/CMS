
<div id="contact" class="container mt-100 mb-100">

    <div class="row">
        <div class="col-md-12">
            <ul class="alert alert-warning alert-dismissible fade show with-icon d-none p-4" id="alert-send-message"></ul>
            <div class="alert alert-success alert-dismissible fade show with-icon d-none" id="success-send-message"></div>
        </div>
    </div>

    <div class="row align-items-center">
        <div class="col-lg-12 col-md-12 mt-12 mt-sm-0 pt-2 pt-sm-0 order-2 order-md-1">
            <div class="card shadow rounded border-0">
                <div class="card-body py-5">
                    <h4 class="card-title">Napisz do nas!</h4>
                    <div class="custom-form mt-4">

                        <div class="contact-form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <label>Imię</label>
                                        <i class="fas fa-user icons"></i>

                                        <input name="name" id="name" type="text" class="form-control pl-5" placeholder="Imię *">
                                    </div>
                                </div><!--end col-->
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <label>Email</label>
                                        <i class="fas fa-at icons"></i>
                                        <input name="email" id="email" type="email" class="form-control pl-5" placeholder="Email *">
                                    </div>
                                </div><!--end col-->
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <label>Temat</label>
                                        <i class="fas fa-pen icons"></i>
                                        <input name="subject" id="subject" type="text" class="form-control pl-5" placeholder="Temat">
                                    </div>
                                </div><!--end col-->
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <label>Telefon kontaktowy</label>
                                        <i class="fas fa-phone icons"></i>
                                        <input name="phone" id="phone" type="text" class="form-control pl-5" placeholder="Telefon *">
                                    </div>
                                </div><!--end col-->
                                <div class="col-md-12">
                                    <div class="form-group position-relative">
                                        <label>Wiadomość</label>
                                        <i class="far fa-envelope icons"></i>
                                        <textarea name="comments" id="message" rows="4" class="form-control pl-5" placeholder="Wiadomość *"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group position-relative">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="accepted" name="Accepted">
                                            <label class="custom-control-label m-0" for="accepted">Akceptuję <a class="checkbox" href="@Url.Action("PrivacyPolicy","Home")">politykę prywatności</a></label>
                                        </div>
                                    </div>
                                </div><!--end col-->
                            </div><!--end row-->
                            <div class="row">
                                <div class="col-sm-4 text-center">
                                    <button class="submitBnt btn btn-primary btn-block" id="submit-send-message">
                                        <span id="button-loader" class="d-none"><img height="25" src="~/user/images/loader.gif" /></span>
                                        <span id="button-text">Wyślij wiadomość</span>
                                    </button>
                                </div><!--end col-->
                            </div><!--end row-->
                        </div><!--end form-->
                    </div><!--end custom-form-->
                </div>
            </div>
        </div><!--end col-->
    </div><!--end row-->
</div>