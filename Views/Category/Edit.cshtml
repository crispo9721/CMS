@model CategoryView

@{
    ViewData["Title"] = "edytowanie kategorii";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}
<div class="page-inner">

    <div class="page-header">
        <h4 class="page-title">Dodawnie kategorii</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="@Url.Action("Index","Admin")">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("List","Article")">Wpisy</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("List","Category")">Kategorie</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                Edytowanie
            </li>
        </ul>
    </div>

    <div class="card">
        @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
        {
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Edytuj kategorię</h4>
                </div>
            </div>
            <div class="card-body">

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.HiddenFor(x => x.Id)

                <div class="input-icon mb-3">
                    <span class="input-icon-addon">
                        <i class="fas fa-pen-alt"></i>
                    </span>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Nazwa kategorii" })
                </div>

                <div class="input-icon mb-3">
                    <span class="input-icon-addon">
                        <i class="fas fa-link"></i>
                    </span>
                    @Html.TextBoxFor(x => x.ShortName, new { @class = "form-control", @placeholder = "Uproszczona nazwa" })

                </div>

                <label for="comment">Opis</label>
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Opis kategorii (opcjonalnie)", @id = "comment", @rows = "5" })

            </div>

            <div class="row justify-content-center">
                <button class="btn btn-primary mb-3" type="submit">
                    <span class="btn-label">
                        <i class="fa fa-plus"></i>
                    </span>
                    Edytuj kategorię
                </button>
            </div>
        }
    </div>
</div>